pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Setup') {
            steps {
                script {
                    

                    sh """
                       apt-get update && apt-get install -y nodejs npm
                       ln -s /usr/bin/nodejs /usr/bin/node  
                       npm install -g npm@latest 
                    """
                }
            }
        }
        stage('Install') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm Build'
            }
        }
    }
}
